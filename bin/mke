#!/bin/bash

# Colores
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
CYAN='\033[1;36m'
RESET='\033[0m'

# Carpetas a crear
DIRS=("recon" "exploit" "loot")

# Verifica si alguna carpeta ya existe
for d in "${DIRS[@]}"; do
  if [[ -d "$d" ]]; then
    echo -e "${YELLOW}[!] La carpeta '${d}' ya existe en este directorio. Abortando.${RESET}"
    exit 1
  fi
done

# Crear carpetas
mkdir -p "${DIRS[@]}"

# Mostrar estructura creada
echo -e "${CYAN}"
echo "=========================================="
echo -e "üß™ ${GREEN}Estructura de carpetas creada con √©xito${RESET}${CYAN}"
echo "=========================================="
echo -e "${CYAN}üìÅ Ruta: ${RESET}$(realpath .)"
echo
echo -e "${CYAN}üìÇ Estructura:${RESET}"

for i in "${!DIRS[@]}"; do
  if [[ $i -lt $((${#DIRS[@]} - 1)) ]]; then
    echo -e "  ${GREEN}‚îú‚îÄ‚îÄ${RESET} ${DIRS[$i]}/"
  else
    echo -e "  ${GREEN}‚îî‚îÄ‚îÄ${RESET} ${DIRS[$i]}/"
  fi
done

echo -e "${CYAN}==========================================${RESET}"
